{
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.renderIndentGuides": true,
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/.DS_Store": true,
    "**/node_modules": true
  },
  "search.exclude": {
    "**/node_modules": true
  },
  "files.autoSave": "afterDelay",
  "files.eol": "\n",
  "extensions.autoUpdate": true,
  "tslint.enable": true,
  "prettier.semi": false,
  "prettier.printWidth": 100,
  "prettier.singleQuote": true,
  "prettier.trailingComma": "all"
}